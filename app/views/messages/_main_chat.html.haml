.chat-main
  .chat-main__message-top
    .group-name
      = @group.name
      .members
        Member : 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group.id), class:'edit-btn' do
      Edit
      -# %span<>
  .chat-main__body
    = render @messages
  = form_with model: [@group, @message], html: {class: "chat-main__message-form"}, local: true do |f|
    .input-box
      = f.text_field :content, class: 'input-box__text', placeholder: 'type a message' 
      = f.label :image, class: 'input-box__image' do
        = icon('far', 'image')
        = f.file_field :image, class: 'input-box__image2'
    %input.send-btn{name: "send", type: "submit", value: "send"}/
