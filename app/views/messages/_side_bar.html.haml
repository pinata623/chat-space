.side-bar
  .side-bar__user-name
    .top-items
      .top-items__userName
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class:'icons')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class:'icons')
          %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .Group
        = link_to '#' do
          .Group__name
            = group.name
          .Group__message
